version 41
__lua__
function _init()
	cls(0)
	shipx=64
	shipy=64
	shipsx=0
	shipsy=0
	
	bulx=50
	buly=50
	bulspr=6  --6 8 9 10
	bulsfx=0  --0 1 3 6
end

function _update()
	
	shipsx=0
	shipsy=0
	--controls
	if btn(0) then
		shipsx=-3
	end
	
	if btn(1) then
		shipsx=3
	end
	
	if btn(2) then
		shipsy=-3
	end
	
	if btn(3) then
		shipsy=3
	end
	
	if btnp(5) then
		bulx=shipx
		buly=shipy-3
		sfx(bulsfx)
	end
	
	if btnp(0) then
 	bulspr=6  --6 8 9 10
 	bulsfx=0  --0 1 3 6
	end
	if btnp(1) then
 	bulspr=8  --6 8 9 10
 	bulsfx=1  --0 1 3 6
	end
	if btnp(2) then
 	bulspr=9  --6 8 9 10
 	bulsfx=3  --0 1 3 6
	end
	if btnp(3) then
 	bulspr=10 --6 8 9 10
 	bulsfx=6  --0 1 3 6
	end

	--moving the ship
	shipx=shipx+shipsx
	shipy=shipy+shipsy
	
	--move the bullet
	buly=buly-6
	
	--checking if we hit the edge
	if shipx>120 then
		shipx=120
	end
	if shipx<0 then
		shipx=0
	end

end

function _draw()
	cls(12)
	spr(3,shipx,shipy)
	spr(bulspr,bulx,buly)
end

